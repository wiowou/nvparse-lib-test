  "version": "0.2.0",
  // "miDebuggerPath": "usr/bin/gdb",
  "configurations": [
    {
      "name": "C++ Launch (Linux)",
      "request": "launch",
      "type": "cppdbg",
      "cwd": "${workspaceRoot}/src",
      "program": "${workspaceRoot}/src/test",
      "externalConsole": false,
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      // "MIMode": "gdb",
      // "miDebuggerPath": "/usr/bin/gdb",
      "preLaunchTask": "C/C++: g++ build"
    }
  ]
}