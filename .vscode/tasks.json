{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceRoot}/src/*.cpp",
        "-o",
        "${workspaceRoot}/src/test",
        "-I./libs"
      ],
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}